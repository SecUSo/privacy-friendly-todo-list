<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_setting_deadline_color_bar"
        android:layout_width="5dp"
        android:layout_height="0px"
        android:layout_alignBottom="@+id/v_exlv_setting_separator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/iv_add_subtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@mipmap/plus" />

    <View
        android:id="@+id/v_exlv_setting_separator"
        android:layout_below="@+id/iv_add_subtask"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/grey" />

</RelativeLayout>